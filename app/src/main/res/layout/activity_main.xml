<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo da Velha"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Matheus Freitas e Alex Sander\n         IFSP Guarulhos - PE1D5"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/top"
        android:layout_marginBottom="80dp"/>

    <ImageView
        android:id="@+id/top"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/center"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <ImageView
        android:id="@+id/top_end"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@+id/center_end"
        app:layout_constraintBottom_toTopOf="@+id/center_end"
        android:layout_marginBottom="54dp"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <ImageView
        android:id="@+id/top_start"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="@+id/center_start"
        app:layout_constraintBottom_toTopOf="@+id/center_start"
        android:layout_marginBottom="54dp"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <ImageView
        android:id="@+id/center"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <ImageView
        android:id="@+id/center_end"
        android:background="#333333"
        android:layout_width="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/center"
        android:layout_height="56dp"/>

    <ImageView
        android:id="@+id/center_start"
        android:background="#333333"
        android:layout_width="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_height="56dp"/>

    <ImageView
        android:id="@+id/bottom"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center"
        android:layout_marginTop="54dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <ImageView
        android:id="@+id/bottom_end"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@+id/center_end"
        app:layout_constraintTop_toBottomOf="@+id/center_end"
        android:layout_marginTop="54dp"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <ImageView
        android:id="@+id/bottom_start"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="@+id/center_start"
        app:layout_constraintTop_toBottomOf="@+id/center_start"
        android:layout_marginTop="54dp"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <Button
        android:id="@+id/button_reset"
        android:text="RESETAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>